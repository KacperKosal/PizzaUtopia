@page "/"

@inject NavigationManager NavigationManager
@using PizzaUtopia.Components.Elements.StartScreen


<link href="https://fonts.googleapis.com/css?family=Jua" rel="stylesheet">
<link rel="stylesheet" href="Profile.css">

@if (!_isLogedIn)
{
    /// @brief Przekierowanie na stronę startową, jeśli użytkownik nie jest zalogowany.
    NavigationManager.NavigateTo("/start");
}
else
{
    /// @brief Przekierowanie na stronę menu, jeśli użytkownik jest zalogowany.
    NavigationManager.NavigateTo("/menu");
}

@code {
    /// @brief Zmienna określająca, czy użytkownik jest zalogowany.
    /// @details Wartość domyślna to `true`. Jeśli użytkownik nie jest zalogowany, nastąpi przekierowanie na stronę startową.
    private readonly bool _isLogedIn = true;
}
