@using PizzaUtopia.Enums

<input @bind-value="Value" type="@InputType.ToString().ToLower()" placeholder="@Placeholder" required="@(IsRequired is null ? false : IsRequired)">

@code {
	private string _value = string.Empty;
	[Parameter] public InputType InputType { get; set; } = InputType.Text;
	[Parameter] public string? Placeholder { get; set; } 
	[Parameter] public bool? IsRequired { get; set; } 
	[Parameter] public EventHandler<string>? ValueChanged { get; set; } 
    public string Value
    {
        get => _value;
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged?.Invoke(this, value);
                StateHasChanged();
            }
        }
    }

}
